<%- include('../includes/head.ejs') %>
    <!-- navigation ends here -->
    <% if(productList.length>0) { %>
        <div class="d-flex justify-content-around flex-wrap" style="max-width: 95vw;">
            <!-- <div class="d-flex" style="max-width: 80vw;"> -->
                <% for (product of productList) { %>
                    <div class="card m-5" style="width: 18rem;">
                        <img class="card-img-top" src="<%= product.imgUrl %>" alt="Card image cap">
                        <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <h5 class="card-title">$<%= product.price %></h5>
                        <% if(isLoggedIn) { %>
                            <a href="/addToCart/<%= product._id %>" class="btn btn-primary">Add to cart</a>
                        <% } %>
                        <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                <% } %>
            <!-- </div> -->
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <% if(hasPreviousPage){ %>
                    <li class="page-item">
                        <a class="page-link" href="/products/?page=<%= previousPage %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/products/?page=<%= previousPage %>"><%= previousPage %></a></li>
                <% } %>
                <li class="page-item"><a class="page-link active" href="/products/?page=<%= currentPage %>"><%= currentPage %></a></li>
                <% if(hasNextPage){ %>
                    <li class="page-item"><a class="page-link" href="/products/?page=<%= nextPage %>"><%= nextPage %></a></li>
                    <li class="page-item">
                        <a class="page-link" href="/products/?page=<%= nextPage %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } %>
            </ul>
          </nav>
    <% } else { %>
        <h2>No products !!!</h2>
    <% } %>
    <%- include('../includes/scripts.ejs') %>
</body>
</html>