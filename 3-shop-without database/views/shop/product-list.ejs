<%- include('../includes/head.ejs') %>
    <!-- navigation ends here -->
    <% if(productList.length>0) { %>
        <div class="d-flex justify-content-around flex-wrap" style="max-width: 95vw;">
            <!-- <div class="d-flex" style="max-width: 80vw;"> -->
                <% for (product of productList) { %>
                    <div class="card m-5" style="width: 18rem;">
                        <img class="card-img-top" src="<%= product.imgUrl %>" alt="Card image cap">
                        <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <h5 class="card-title">$<%= product.price %></h5>
                        <a href="/addToCart/<%= product.id %>" class="btn btn-primary">Add to cart</a>
                        <a href="/products/<%= product.id %>" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                <% } %>
            <!-- </div> -->
        </div>
    <% } else { %>
        <h2>No products !!!</h2>
    <% } %>
    <%- include('../includes/scripts.ejs') %>
</body>
</html>